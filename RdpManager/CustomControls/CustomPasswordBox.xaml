<UserControl x:Class="CustomControls.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                     TextChanged="PasswordTextBox_TextChanged"
                     IsEnabled="{Binding IsEditable,
                                         RelativeSource={RelativeSource AncestorType=UserControl}}"
                     Visibility="{Binding IsPasswordVisible, 
                                          RelativeSource={RelativeSource AncestorType=UserControl}, 
                                          Converter={StaticResource BoolToVisibilityConverter}}"/>
            <PasswordBox x:Name="PasswordBox"
                         PasswordChanged="PasswordBox_PasswordChanged"
                         IsEnabled="{Binding IsEditable,
                                             RelativeSource={RelativeSource AncestorType=UserControl}}"
                         Visibility="{Binding IsPasswordVisible, 
                                              RelativeSource={RelativeSource AncestorType=UserControl}, 
                                              Converter={StaticResource BoolToInvertedVisibilityConverter}}"/>
        </Grid>

        <Grid Grid.Column="1"
              Margin="10 0 0 0">
            <Button Click="ShowPasswordButton_Click"
                    Visibility="{Binding IsPasswordVisible, 
                                         RelativeSource={RelativeSource AncestorType=UserControl}, 
                                         Converter={StaticResource BoolToInvertedVisibilityConverter}}">
                <TextBlock FontFamily="Segoe MDL2 Assets" 
                           Text="&#xe7b3;" 
                           FontSize="16" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Button>
            <Button Click="HidePasswordButton_Click"
                    Visibility="{Binding IsPasswordVisible, 
                                         RelativeSource={RelativeSource AncestorType=UserControl}, 
                                         Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock FontFamily="Segoe MDL2 Assets" 
                           Text="&#xed1a;" 
                           FontSize="16" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
