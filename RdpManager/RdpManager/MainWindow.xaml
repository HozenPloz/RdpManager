<Window x:Class="RdpManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RdpManager"
        xmlns:views="clr-namespace:RdpManager.Views"
        xmlns:viewmodels="clr-namespace:RdpManager.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:RdpConnectionViewModel}">
            <views:RdpConnectionView />
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical"
                    Grid.Column="0"
                    Background="LightGray">
            <TextBlock Text="Connections"
                       FontSize="18"
                       Margin="0 10 0 10"
                       FontWeight="DemiBold"
                       HorizontalAlignment="Center"/>
            <ListBox ItemsSource="{Binding Connections}"
                     SelectedItem="{Binding SelectedConnection, Mode=TwoWay}"
                     DisplayMemberPath="Name"
                     Margin="10"
                     Background="White"
                     BorderThickness="0"/>           
        </StackPanel>
        <Grid Grid.Column="1">
            <ContentControl Content="{Binding SelectedConnection}"/>
        </Grid>
    </Grid>
</Window>
