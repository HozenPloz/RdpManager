<UserControl x:Class="RdpManager.Views.RdpConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:CustomControls="clr-namespace:CustomControls;assembly=CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">
        <Grid Margin="0 0 0 15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Content="Connect"
                    Command="{Binding ConnectCommand}"
                    HorizontalAlignment="Left"
                    Padding="20 5 20 5"
                    BorderThickness="0"
                    Grid.Column="0"
                    Visibility="{Binding IsEditMode, 
                                         Converter={StaticResource BoolToInvertedVisibilityConverter}}"/>
            <Button Content="Save"
                    Command="{Binding SaveEditRdpConnectionCommand}"
                    HorizontalContentAlignment="Right"
                    Margin="20 0 0 0"
                    Padding="20 5 20 5"
                    BorderThickness="0"
                    Grid.Column="2"
                    Visibility="{Binding IsEditMode, 
                                         Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Cancel"
                    Command="{Binding CancelEditRdpConnectionCommand}"
                    HorizontalContentAlignment="Right"
                    Margin="20 0 0 0"
                    Padding="20 5 20 5"
                    BorderThickness="0"
                    Grid.Column="3"
                    Visibility="{Binding IsEditMode, 
                                         Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Edit"
                    Command="{Binding EditRdpConnectionCommand}"
                    HorizontalContentAlignment="Right"
                    Margin="20 0 0 0"
                    Padding="20 5 20 5"
                    BorderThickness="0"
                    Grid.Column="3"
                    Visibility="{Binding IsEditMode, 
                                         Converter={StaticResource BoolToInvertedVisibilityConverter}}"/>
            <Button Content="Delete"
                    Command="{Binding DeleteRdpConnectionCommand}"
                    HorizontalContentAlignment="Right"
                    Margin="20 0 0 0"
                    Padding="20 5 20 5"
                    BorderThickness="0"
                    Grid.Column="4"/>
        </Grid>
        
        <Label Content="Name:"/>
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                 IsEnabled="{Binding IsEditMode}"/>
        <Label Content="Address:"/>
        <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                 IsEnabled="{Binding IsEditMode}"/>
        <Label Content="Username:"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                 IsEnabled="{Binding IsEditMode}"/>
        <Label Content="Password:"/>
        <CustomControls:CustomPasswordBox Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsEditable="{Binding IsEditMode}"
                                          IsPasswordVisible="{Binding IsPasswordVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Content="Notes:"/>
        <CustomControls:CustomRichTextBox x:Name="PasswordBoxControl"
                                          Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsEditable="{Binding IsEditMode}"/>
    </StackPanel>
</UserControl>
